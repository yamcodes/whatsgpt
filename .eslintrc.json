{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "plugin:vue/essential",
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "parser": "@typescript-eslint/parser",
        "sourceType": "module"
    },
    "plugins": [
        "vue",
        "@typescript-eslint"
    ],
    "ignorePatterns": ["dist", "dist-*"],
    "rules": {
        "no-unused-vars": "off",
        "no-underscore-dangle": "off",
        "no-undef": "error",
        "import/no-unresolved": "off",
        "vue/no-multiple-template-root": "off",
        "import/no-extraneous-dependencies": [
            "error",
            {
                "devDependencies": [
                    "**/*.test.js",
                    "**/*.spec.js",
                    "**/*.test.ts",
                    "**/*.spec.ts",
                    "**/*.test.tsx",
                    "**/*.spec.tsx",
                    "**/*.test.vue",
                    "**/*.spec.vue",
                    "src/samples/**/*",
                    "electron/**/*"
                ]
            }
        ],
        "curly": ["error", "multi"]
    }
}